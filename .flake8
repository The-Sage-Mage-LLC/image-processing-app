[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
select = E, W, F, C90, B, C4
exclude = .git, .mypy_cache, .pytest_cache, .tox, venv, build, dist, *.egg-info, __pycache__
max-complexity = 10

# Per-file ignores
per-file-ignores =
    tests/*: F401, F811, D
    setup.py: E402, F401
    */__init__.py: F401
