# Image Processing Application - Modern Development Environment
# Environment variables for development, testing, and production

# Application Configuration
IMGPROC_LOG_LEVEL=INFO
IMGPROC_MAX_PARALLEL_WORKERS=4
IMGPROC_ENABLE_GPU=false
IMGPROC_CONFIG_DIR=./config
IMGPROC_LOG_DIR=./logs
IMGPROC_CACHE_DIR=./.cache

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Database Configuration (optional)
DATABASE_URL=sqlite:///./data/imgproc.db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=imgproc
POSTGRES_USER=imgproc
POSTGRES_PASSWORD=imgproc123

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Processing Configuration
MAX_FILE_SIZE_MB=100
MAX_BATCH_SIZE=1000
PROCESSING_TIMEOUT_SECONDS=300
ENABLE_AI_FEATURES=true

# Development Configuration
DEBUG=false
DEVELOPMENT_MODE=false
ENABLE_PROFILING=false

# Docker Configuration
BUILD_VERSION=1.0.0
CONTAINER_REGISTRY=ghcr.io
IMAGE_NAME=the-sage-mage-llc/image-processing-app

# NGINX Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_USE_TLS=true

# Cloud Storage Configuration (optional)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Azure Configuration (optional)
AZURE_STORAGE_ACCOUNT=your-account
AZURE_STORAGE_KEY=your-key
AZURE_CONTAINER=your-container

# Google Cloud Configuration (optional)
GOOGLE_CLOUD_PROJECT=your-project
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Feature Flags
ENABLE_WEB_UI=true
ENABLE_BATCH_PROCESSING=true
ENABLE_REAL_TIME_PROCESSING=false
ENABLE_WEBHOOK_NOTIFICATIONS=false
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true

# Performance Configuration
MAX_MEMORY_USAGE_MB=2048
CPU_CORES_TO_USE=0  # 0 = auto-detect
ENABLE_MULTIPROCESSING=true
CHUNK_SIZE=100

# Quality Configuration
DEFAULT_JPEG_QUALITY=95
DEFAULT_PNG_COMPRESSION=6
PRESERVE_METADATA=false
STRIP_SENSITIVE_METADATA=true

# AI/ML Configuration
HUGGINGFACE_CACHE_DIR=./.cache/huggingface
TORCH_CACHE_DIR=./.cache/torch
ENABLE_CUDA=false
CUDA_VISIBLE_DEVICES=0

# Logging Configuration
LOG_FORMAT=json  # json or text
LOG_ROTATION=true
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5
ENABLE_STRUCTURED_LOGGING=true

# Testing Configuration
TEST_DATA_DIR=./test_data
TEST_OUTPUT_DIR=./test_output
TEST_TIMEOUT_SECONDS=60
ENABLE_GUI_TESTING=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=./backups